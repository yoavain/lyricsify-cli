{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "strict": false,
        "moduleResolution": "node",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~src/*": ["src/*"],
            "~test/*": ["test/*"],
            "~resources/*": ["resources/*"]
        }
    },
    "include": ["./src/**/*", "./test/**/*", "./e2e/**/*", "./*.ts", "./*.js", "./launcher/**/*.ts"]
}
